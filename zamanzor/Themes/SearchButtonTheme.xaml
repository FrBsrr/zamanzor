<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style BasedOn="{StaticResource {x:Type Button}}"
           TargetType="{x:Type Button}"
           x:Key="SearchButtonTheme">

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="border" CornerRadius="0,5,5,0" BorderBrush="{TemplateBinding Background}" BorderThickness="2">
                            <Border CornerRadius="0,5,5,0" Margin="-1" Background="{TemplateBinding Background }"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">

                            </Border>
                        </Border>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
            <Setter Property="Background" Value="#5db9ed"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style.Setters>



        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4a94be"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>